{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Coverage",
      "type": "shell",
      "command": "cargo",
      "args": [
        "llvm-cov",
        "nextest",
        "--lcov",
        "--output-path",
        "lcov.info"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}